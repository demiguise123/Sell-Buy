<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/ImageView02"

        android:layout_height="match_parent"

        android:layout_width="match_parent"

        android:src="@drawable/loginpage"

        android:scaleType="matrix"
        android:adjustViewBounds="true"></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Just Browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/browse"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onButtonPressed"/>

        <TextView
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="13dp"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold|italic" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/editText4"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:layout_marginTop="15dp"
            android:id="@+id/editText6"
            android:hint="Password"
            android:textStyle="normal|italic"
            android:background="@android:color/background_dark" />

        <TextView
            android:text="SIGN UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/editText6"
            android:layout_alignLeft="@+id/editText6"
            android:layout_alignStart="@+id/editText6"
            android:layout_marginTop="24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView13"
            android:layout_alignRight="@+id/editText6"
            android:layout_alignEnd="@+id/editText6"
            android:layout_marginTop="18dp"
            android:id="@+id/editText7"
            android:hint="Full Name"
            android:background="@android:color/background_dark"
            android:textStyle="normal|italic"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText8"
            android:hint="Username"
            android:background="@android:color/background_dark"
            android:textStyle="normal|italic"
            android:layout_below="@+id/editText7"
            android:layout_alignLeft="@+id/editText7"
            android:layout_alignStart="@+id/editText7"
            android:layout_marginTop="19dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/editText8"
            android:layout_alignLeft="@+id/editText8"
            android:layout_alignStart="@+id/editText8"
            android:layout_marginTop="21dp"
            android:id="@+id/editText9"
            android:hint="Password"
            android:background="@android:color/background_dark"
            android:textStyle="normal|italic"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="21dp"
            android:id="@+id/editText10"
            android:hint="Confirm Password"
            android:background="@android:color/background_dark"
            android:textStyle="normal|italic"
            android:layout_below="@+id/editText9"
            android:layout_alignLeft="@+id/editText9"
            android:layout_alignStart="@+id/editText9" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/editText10"
            android:layout_alignLeft="@+id/editText10"
            android:layout_alignStart="@+id/editText10"
            android:layout_marginTop="20dp"
            android:id="@+id/editText11"
            android:hint="E-Mail ID"
            android:background="@android:color/background_dark"
            android:textStyle="normal|italic"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="About You (Optional)"
            android:background="@android:color/background_dark"
            android:textStyle="normal|italic"
            android:ems="10"
            android:id="@+id/editText12"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/editText11"
            android:layout_alignLeft="@+id/editText11"
            android:layout_alignStart="@+id/editText11" />

        <Button
            android:text="Log In!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText6"
            android:layout_toRightOf="@+id/editText4"
            android:layout_toEndOf="@+id/editText4"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:id="@+id/login"
            android:onClick="onButtonPressed"/>

        <Button
            android:text="Sign up!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup"
            android:layout_alignBottom="@+id/editText12"
            android:layout_alignLeft="@+id/login"
            android:layout_alignStart="@+id/login"
            android:onClick="onButtonPressed"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/imageupload"
            android:id="@+id/imageView"
            android:layout_below="@+id/textView13"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="22dp"
            android:id="@+id/editText4"
            android:hint="Username"
            android:background="@android:color/background_dark"
            android:textStyle="normal|italic"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

    </RelativeLayout>
</FrameLayout>
